import random
import string
import requests
import time
import sys
import os

def loading_effect(message, duration=3):
    """Simulate a hacking-style loading effect."""
    for _ in range(duration):
        for char in "|/-\\":
            sys.stdout.write(f"\r\033[92m{message} {char}\033[0m")  # Green spinning effect
            sys.stdout.flush()
            time.sleep(0.2)
    sys.stdout.write("\r")

